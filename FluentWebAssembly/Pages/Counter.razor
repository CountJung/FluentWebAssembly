@page "/counter"
@inherits MvvmComponentBase<QuestionCardViewModel>

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: <FluentBadge Appearance="Appearance.Neutral">@ViewModel.CurrentCount</FluentBadge></p>
<FluentButton Appearance="Appearance.Accent" @onclick="(o)=>ViewModel.IncrementCountCommand.Execute(o)">Click me</FluentButton>
<FluentTextField Label="Enter a Text" Immediate="true" @bind-Value="@ViewModel.TestText"></FluentTextField>

